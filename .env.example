# To use these configurations, do you need to create file .env with the same
# configuration parameters, or configure a new server with new parameters.
API_REST_PORT=3000
DB_HOST='localhost'
DB_PORT=27017
DB_NAME='usercenter-app'
DB_USER='dev'
DB_PASSWORD='dev'
UPLOAD_DIR_CONTRATOS='public/files/contratos'
# Key used for generating JWT key.
SECRET_JWT='mysecret'
# Time to expire user JWToken in seconds, login time.
EXPIRE_USER_TIME=36000

## Configs e-mail sender ##
MAIL_HOST='smtp.mailtrap.io'
MAIL_PORT=2525
# true for 465, false for other ports
MAIL_SECURE=false
MAIL_USER='your_user_email_here'
MAIL_PASSWORD='your_password_email_here'
MAIL_SEND_AS_NAME='send_as_my_name'
MAIL_SEND_AS_EMAIL='send_email_as@business.com'
MAIL_SEND_TO='email_to_send_to@business.com'

## Your company's information. ## 
COMPANY_NAME='Name of your company'
COMPANY_SITE='http://www.yourcompany.com'
COMPANY_LOGO='http://www.yourcompany.com/logo.png'

## PRINTER ###
ZPL_PRINTER='NAME_OF_PRINTER_ZPL_INSTALLED_ON_SYSTEM'
ZPL_TEMPLETE_ASSET='public/zpl/asset_templete.zpl'
ZPL_LOGO='ZPL_CODE_LOGO_WITHOUT_^GF_^FS'

## AD LDAP Server configs ##
LDAP_SERVER='ldap://IP_OR_DOMAIN_NAME_TO_LDAP_SERVER'
LDAP_PORT=389
LDAP_USER='USER@DOMAIN_NAME.SUB_DOMAIN_NAME'
LDAP_PASSWORD='USER_PASSWORD'
# Used for request in LDAP server.
LDAP_DN_FOR_USERS='dc=domain_name_company,dc=sub_domain_name_company'
# Example to start point 'dc=domain_name_company,dc=sub_domain_name_company, don't use spaces'
LDAP_START_POINT='START_POINT_TO_REQUEST_IN_AD'